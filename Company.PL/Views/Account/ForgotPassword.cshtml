@model ForgetPasswordDto
@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="forgot-password-container">
    <header class="text-center mb-4">
        <h2 class="form-title">Forgot Password</h2>
        <p class="form-subtitle">Choose how you want to reset your password</p>
    </header>
    <form asp-action="SendResetPassword" class="needs-validation" novalidate>
        <!-- Email Field -->
        <div class="mb-4">
            <label asp-for="Email" class="form-label">Email</label>
            <div class="input-group">
                <span class="input-group-text"><i class="bx bx-envelope"></i></span>
                <input asp-for="Email" class="form-control" placeholder="Enter your email" required />
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <!-- Reset Method Selection -->
        <div class="mb-4">
            <label class="form-label">Reset Password Method</label>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="ResetMethod" value="Email" id="resetByEmail" checked />
                <label class="form-check-label" for="resetByEmail">
                    <i class="bx bx-envelope"></i> Send Reset Link via Email
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="ResetMethod" value="Sms" id="resetBySms" />
                <label class="form-check-label" for="resetBySms">
                    <i class="bx bx-message"></i> Send Reset Link via SMS
                </label>
            </div>
        </div>

        <!-- Submit Button -->
        <div class="mb-3">
            <input type="submit" value="Reset Now" class="btn btn-primary w-100 btn-lg" />
        </div>
    </form>
</div>

@section ValidationSection {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
