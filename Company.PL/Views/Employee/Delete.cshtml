@model CreateEmployeeDto

@{
	ViewData["Title"] = "Delete";
}

<h1 class="text-danger">Confirm Employee Deletion</h1>

<form asp-action="Delete">
	<div class="mb-3">
		<h4 class="text-warning">Are you sure you want to delete this employee?</h4>
		<hr />
		<partial name="EmployeePartialView/_DeleteDetailsPartialView" />
		<input asp-for="ImageName" type="hidden" />
	</div>
	<div class="mt-3">
		<button type="submit" class="btn btn-danger">Delete</button>
		<a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
	</div>
</form>

