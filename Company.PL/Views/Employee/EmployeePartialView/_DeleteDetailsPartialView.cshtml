@model Employee
<div class="my-3">
	<label class="col-form-label" asp-for="Name"></label>
	<input class="form-control" asp-for="Name" readonly />
	<span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="my-3">
	<label class="col-form-label" asp-for="Age"></label>
	<input class="form-control" asp-for="Age" readonly />
	<span asp-validation-for="Age" class="text-danger"></span>
</div>
<div class="my-3">
	<label class="col-form-label" asp-for="Address"></label>
	<input class="form-control" asp-for="Address" readonly />
	<span asp-validation-for="Address" class="text-danger"></span>
</div>
<div class="my-3">
	<label class="col-form-label" asp-for="Email"></label>
	<input class="form-control" asp-for="Email" readonly />
	<span asp-validation-for="Email" class="text-danger"></span>
</div>
<div class="my-3">
	<label class="col-form-label" asp-for="Salary"></label>
	<input class="form-control" asp-for="Salary" readonly />
	<span asp-validation-for="Salary" class="text-danger"></span>
</div>
<div class="my-3">
	<label class="col-form-label" asp-for="Phone"></label>
	<input class="form-control" asp-for="Phone" readonly />
	<span asp-validation-for="Phone" class="text-danger"></span>
</div>
<div class="my-3">
	<label class="col-form-label" asp-for="HiringDate"></label>
	<input class="form-control" asp-for="HiringDate" readonly />
	<span asp-validation-for="HiringDate" class="text-danger"></span>
</div>
<div class="my-3">
	<input asp-for ="IsActive" class="form-check" readonly />
	<label asp-for ="IsActive" class="col-form-label"></label>

</div>
<div class="my-3">
	<input asp-for ="IsDeleted" class="form-check" readonly />
	<label asp-for="IsDeleted" class="col-form-label"></label>

</div>
